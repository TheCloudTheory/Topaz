<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <AssemblyName>topaz-mcp-$(RuntimeIdentifier)</AssemblyName>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.1" />
      <PackageReference Include="ModelContextProtocol" Version="0.4.0-preview.3" />
      <PackageReference Include="Testcontainers" Version="4.8.1" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Topaz.AspNetCore.Extensions\Topaz.AspNetCore.Extensions.csproj" />
      <ProjectReference Include="..\Topaz.Identity\Topaz.Identity.csproj" />
      <ProjectReference Include="..\Topaz.ResourceManager\Topaz.ResourceManager.csproj" />
      <ProjectReference Include="..\Topaz.Shared\Topaz.Shared.csproj" />
    </ItemGroup>

</Project>
